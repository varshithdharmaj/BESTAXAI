# Development Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port 3002 (matching your working local setup)
EXPOSE 3002

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3002"]
